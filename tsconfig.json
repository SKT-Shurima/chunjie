{
  "compilerOptions": {
    /* 基本选项 */
    "target": "ES5", // 指定 ECMAScript 目标版本: 'ES3' (default), 'ES5', 'ES2015', 'ES2016', 'ES2017', or 'ESNEXT'
    "module": "esnext", // 指定使用模块: 'commonjs', 'amd', 'system', 'umd' or 'es2015'
    "lib": ["es7", "dom"], // 指定要包含在编译中的库文件
    "allowJs": true, // 允许编译 javascript 文件
    "checkJs": true, // 报告 javascript 文件中的错误
    "jsx": "react",
    // "declaration": true, // 生成相应的 '.d.ts' 文件
    "sourceMap": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "removeComments": true,
    "rootDirs": ["./src"],
    "baseUrl": "./src",

    /* 严格类型检查选项 */
    "strict": true,
    "noImplicitAny": true, // 在表达式和声明上有隐含的 any类型时报错
    "strictNullChecks": true, // 启用严格的 null 检查
    "strictFunctionTypes": true, // 启用对函数类型的严格检查
    "noImplicitThis": true, // 当 this 表达式值为 any 类型的时候，生成一个错误
    "alwaysStrict": true, // 以严格模式检查每个模块，并在每个文件里加入 'use strict'

    /* 模块解析选项 */
    /* 额外的检查 */
    "noUnusedLocals": true, // 有未使用的变量时，抛出错误
    "noUnusedParameters": true, // 有未使用的参数时，抛出错误
    "noImplicitReturns": true, // 并不是所有函数里的代码都有返回值时，抛出错误
    "noFallthroughCasesInSwitch": true, // 报告 switch 语句的 fallthrough 错误。（即，不允许 switch 的 case 语句贯穿）
    "downlevelIteration": true,

    /* Others */
    "paths": {
      "@dependencies/*": ["../dependencies/*"],
      "@assets/*": ["assets/*"],
      "@components/*": ["components/*"],
      "@config/*": ["config/*"],
      "@api/*": ["services/api/*"],
      "@services/*": ["services/*"],
      "@pages/*": ["pages/*"],
      "@utils/*": ["utils/*"],
      "@consts/*": ["consts/*"],
      "@locales/*": ["locales/*"]
    },
    "importHelpers": true,
    "experimentalDecorators": true, // 开启装饰器的使用
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types/", "./src/typings/"]
  },
  "include": ["src", "typings/*"],
  "exclude": ["dist", "mock", "build", "dependencies", "node_modules"]
}
